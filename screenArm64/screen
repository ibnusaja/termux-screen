#!/system/bin/sh
dir="$(cd "$(dirname "$0")"; pwd)";

if [[ "$(id -u)" != "0" ]];then
 echo "no root mode"
 export HOME=$dir;
else
 echo "root mode"
 export HOME=$dir/suroot;
fi

# export HOME=$dir;
export LD_LIBRARY_PATH=$dir/lib;
export TERM=xterm-256color;
export TERMINFO=$dir/terminfo
export TERM=xterm-256color;

echo $LD_LIBRARY_PATH
echo $TERM
echo $HOME
$dir/screen.bin "$@";
